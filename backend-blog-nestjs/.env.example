# Database
DATABASE_URL="postgresql://blog_user:blog_secret_123@localhost:5432/blog_db?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# App
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS and webhooks)
FRONTEND_URL="http://localhost:3000"

# Media Storage (local)
STORAGE_TYPE="local"
UPLOAD_DIR="./uploads"
MEDIA_URL="http://localhost:3001/uploads"

# Optional: S3 Storage (uncomment to use)
# STORAGE_TYPE="s3"
# S3_ENDPOINT="https://s3.amazonaws.com"
# S3_ACCESS_KEY="your-access-key"
# S3_SECRET_KEY="your-secret-key"
# S3_BUCKET="your-bucket-name"
# S3_REGION="us-east-1"
# CDN_URL="https://cdn.yourdomain.com"

# Email (for password reset)
SMTP_HOST="smtp.mailtrap.io"
SMTP_PORT=2525
SMTP_USER=""
SMTP_PASS=""
MAIL_FROM="noreply@yourblog.com"

# Site
SITE_URL="http://localhost:3000"
SITE_NAME="My Blog"

# Revalidation secret (for ISR)
REVALIDATE_SECRET="your-revalidate-secret-key"
